/* ====================================
Strip
==================================== */

.button
  cursor: pointer
  display: flex
  height: 40px
  align-items: center
  padding: 0 10px
  span, span:after, span:before
    transition: .3s all
    width: 30px
    background: $color-black
    height: 1px
    display: block
    content: ""
    position: relative
  span
    &:after
      top 10px
    &:before
      top -10px
  &.active
    span
      width: 0%;
      &:after
        transform: rotate(-45deg);
        top: -1px;

      &:before
        transform: rotate(45deg);
        top: 0;



