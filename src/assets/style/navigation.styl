$color-navigation-bg = #232323
$heigh-navigation = 55px
$color-main = #ff7e00
$color-second = #2A326C

$color-contrast = #306efe
$text-color = #333
$color-black = #232323


.overlay-navigation
  position: fixed;
  z-index: 100
  width: 100%;
  height: 400px;
  padding-top:20px
  background-color: hsla(0, 0%, 0%, 0.8);
  ul.level1
    text-align: center
    text-decoration: none
    list-style-type: none
    > li
      padding: 0
      font-size: 2rem
      > .li-level1
        color: #fff
        text-transform: uppercase
        font-family: 'Quicksand', sans-serif
        display: block
        font-weight: 100
        letter-spacing: 4px
        text-decoration: none
        cursor: pointer
        padding: .5em .5em
        border-bottom: 1px solid
      &:hover
        > .li-level1
          color: lighten($color-main, 50%) !important
          &:after
            width: 0;
            left: 50%
        ul.level2
          li
            max-height: 100px