$color-navigation-bg = #232323
$heigh-navigation = 55px
$color-main = #306efe
$color-second = #2A326C

$color-contrast = #FFB600
$text-color = #333
$color-black = #232323

.overlay-navigation
  ul.nav-level-1
    text-align: center
    text-decoration: none
    > li.nav-element-level-1
      padding: 0
      text-transform: uppercase
      font-family: 'Quicksand', sans-serif
      display: block
      font-weight: 100
      letter-spacing: 4px
      cursor: pointer
      padding: 1em 1em

      > a, > span
        font-size: 2rem
        text-decoration: none
        color: #fff
        // FIXME: passenden Media Queries fÃ¼r handys, sonst reagieren die auf Hover
        @media (min-width: 400px)
          &:hover
            color: lighten($color-main, 20%)
          &:after
            width: 60%
        > &:after
          content: ''
          display: block
          left: 20%
          width: 0
          margin-top:10px
          height: 1px
          background: lighten($color-main, 20%)
          transition: width .5s
          position: relative

        
    > li.nav-element-level-1.slide-in-nav-item.active
      > a
        color: lighten($color-contrast, 20%)

      span
        color: lighten($color-main, 20%)

      ul.nav-level-2
          li
            max-height: 100px

  ul.nav-level-2
    display: flex
    justify-content: center
    flex-direction: column;
    li.nav-element-level-2
      transition: 1s all ease
      max-height: 0
      overflow: hidden
      padding: 0
      a
        font-size: 1em
        color: #fff
        text-transform: uppercase
        font-family: 'Quicksand', sans-serif
        display: inline-block
        font-weight: 100
        letter-spacing: 4px
        text-decoration: none
        padding: .6em .5em
        &:hover
          color: lighten($color-main, 20%) !important
          
for i in range(1, 6, 1)
  $x = i*0.2s
  nav li:nth-of-type({i})
    &.slide-in-nav-item
      animation: slide-in-nav-item 0.4s linear 1 $x both
    &.slide-in-nav-item-reverse
      animation: slide-in-nav-item-reverse .3s linear 1 0.1s both

$value_2 = 20px
$value_1 = 0

@keyframes slide-in-nav-item
  from
    -webkit-transform: translateY($value_2);
    transform: translateY($value_2)
    opacity: 0
  to
    -webkit-transform: translateY($value_1);
    transform: translateY($value_1)
    opacity: 1
@keyframes slide-in-nav-item-reverse
  from
    -webkit-transform: translateY($value_1);
    transform: translateY($value_1)
    opacity: 1
  to
    -webkit-transform: translateY($value_2);
    transform: translateY($value_2)
    opacity: 0


span.arrow
  width: 30px
  height: 40px
  position absolute
  margin-left:10px
  &:hover
    &:after,&:before
      background: lighten($color-main, 20%)
  &:before, &:after
    background: whitesmoke;
    width: 20px ;
    transition: 0.3s all;
    top: 20px ;
    height: 1px;
    display: block;
    content: "";
    right:10%
    position: absolute;
    margin-top: 0;
  &:after
    transform: rotate(90deg)
  &.active
    &:after
      transform: rotate(45deg)
    &:before
      transform: rotate(-45deg)
    &:after, &:before
      top: 20px;
      transition: 0.3s all;
      width: 20px;
      background: lighten($color-main, 20%) !important;
      height: 1px;
      display: block;
      content: "";
      position: absolute;