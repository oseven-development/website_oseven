@import './_variables.styl'

#bottom-footer
  padding-top: 2em
  text-align: center
  background-image: linear-gradient(45deg, #ddd 0%, #f1f1f1 50%)

  ul.level1, ul.contact
    padding: 0 0 1em 0
    li
      font-size: 1em
      padding: .3em 0
      a, span
        // color: lighten($color-main, 70%)
        color: #333
        &:hover
          // color: lighten($color-main, 50%)
          color: $color-main
      ul.level2
        li
          a
            font-size: 1em


  .navigation-bottom
    > li
      a
        color: #333333
        font-size:0.9em
        &:hover
          color: $color-main


.footer-bottom-section
  position: relative
  bottom: 0
  left: 0
  width: 100%
  padding: 15px
  border-top: 1px solid #555
  display: flex:
  .footer-bottom-wrapper
    font-family "Roboto Slab", sans-serif
    color: #555
    margin: auto
    .footer-address
      display: inline
      font-style: normal
